<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/to_anim_set_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="To Animator set"
        app:layout_constraintBottom_toTopOf="@+id/to_motion_layout_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/to_motion_layout_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="To motion"
        app:layout_constraintBottom_toTopOf="@+id/to_lottie_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/to_anim_set_button" />

    <Button
        android:id="@+id/to_lottie_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="to lottie"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/to_motion_layout_btn" />
</androidx.constraintlayout.widget.ConstraintLayout>